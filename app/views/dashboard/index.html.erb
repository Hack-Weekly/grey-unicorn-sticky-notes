<div id="workspace">
  <h2 id="workspace-title" class="mb-4"><%= @workspace.name %></h2>

  <div class="row g-4" id="whiteboards">
    <% @workspace.whiteboards.each do |whiteboard| %>
      <div class="col">
        <div class="card h-100">
          <div class="board-header">
            <i class="fa fa-lg fa-note-sticky"></i>
            <h3 class="board-title"><%= whiteboard.title %></h3>
          </div>
          <div class="card-body">
            <div id="sticky-notes" class="row row-cols-4 g-3">
              <% whiteboard.sticky_notes.each do |sticky_note| %>
                <div class="col">
                  <div class="sticky-note">
                    <p><%= sticky_note.content %></p>
                  </div>
                </div>
              <% end %>
              <div class="col">
                <%= render partial: "sticky_notes/sticky_note_placeholder", locals: { whiteboard_id: whiteboard.id } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
