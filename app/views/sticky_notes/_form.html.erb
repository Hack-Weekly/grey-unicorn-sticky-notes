<%= form_with(model: sticky_note) do |form| %>
  <% if sticky_note.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(sticky_note.errors.count, "error") %> prohibited this sticky_note from being saved:</h2>

      <ul>
        <% sticky_note.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :content, style: "display: block" %>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.label :whiteboard_id, "Select a whiteboard:" %>
    <%= form.collection_select :whiteboard_id, pundit_user.last_viewed_workspace.whiteboards, :id, :title %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
