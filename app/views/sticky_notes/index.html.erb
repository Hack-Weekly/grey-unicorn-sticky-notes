<div >

<p style="color: green"><%= notice %></p>

  <h1>Sticky notes</h1>
  <div id="sticky_notes" data-controller="drag" data-drag-url-value='/sticky_notes/:id/location' data-drag-attribute-value="sticky_note[position]">
    <% @sticky_notes.each do |sticky_note| %>
      <%= render sticky_note, sticky_note: sticky_note %>
      <p>
        <%= link_to "Show this sticky note", sticky_note %>
      </p>
    <% end %>
  </div>
  <%= link_to "New sticky note", new_sticky_note_path %>

