<p class="text-success"><%= notice %></p>

<h1 class="mb-4">Workspaces</h1>

<div class="container-fluid">
  <div id="workspaces" class="row g-3">
    <% @workspaces.each do |workspace| %>
      <div class="col">
        <div class="card">
          <div class="card-body">
            <%= render workspace %>
            <p class="mt-2">
              <%= link_to "Show this workspace", workspace, class: 'btn btn-primary' %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= link_to "New workspace", new_workspace_path, class: 'btn btn-success mt-4' %>
